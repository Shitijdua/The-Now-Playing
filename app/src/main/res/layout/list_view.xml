<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/movieTitle"
        android:layout_width="157dp"
        android:layout_height="135dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginStart="7dp"
        android:layout_marginTop="10dp"
        android:text="Jurrasic Park"
        android:textColor="#000000"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/movie_imageview"
        android:layout_width="224dp"
        android:layout_height="154dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="66dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="-67dp"
        android:layout_toRightOf="@id/movieTitle"
        android:src="@drawable/thumbsup"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <ImageView
        android:id="@+id/imageIcon"
        android:layout_width="39dp"
        android:layout_height="32dp"
        android:layout_alignStart="@+id/movieTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="144dp"
        android:layout_marginLeft="-327dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/movie_imageview"
        android:src="@drawable/thumbsup"
        android:visibility="visible" />


</RelativeLayout>